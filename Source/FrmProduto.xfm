      :nVAlignment := vaCENTER
      :lAutoSize := .F.
      :Create()
   END

   WITH OBJECT ::oEditEstoque := TMaskEdit():New( Self )
      :SetBounds( 52, 56, 90, 20 )
      :nAlignment := taRIGHT
      :nMaxLength := 10
      :cPicture := "@E999,999.999 9999999999"
      :Value := 0
      :Create()
   END

   WITH OBJECT ::oBtnConfirmar := TBtnBmp():New( Self )
      :SetBounds( 280, 68, 106, 25 )
      :cText := "Confirmar"
